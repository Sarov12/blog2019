<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="menu">
      <%= link_to 'Блог', posts_path %>
      <%= link_to 'Пользователи', users_path %>
      <div style="float:right">
      <% if @current_user %>
  <%= link_to 'Выйти', logout_path %>
      <%else %>
      <%= link_to 'Войти',  login_path %>
      <%= link_to 'Зарегистрироваться', new_user_path %>
      <% end  %>
        </div>
      </div>
      <% if @current_user %>
      <div class="zd">
          <%= "Здравствуйте, #{@current_user.login}!" %>
        </div>
      <%end%>
    <div class="currentUser" style="color:black">
    <%flash.each do |key, val|  %>
    <p class ='notice'>
      <%= val  %>
     </p>
     <%end%>
     <%= yield %>
      </div>
  </body>
</html>
